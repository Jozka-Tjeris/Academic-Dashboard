generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ---------------- User Model ----------------

model User {
  id            String    @id @default(cuid())
  googleId      String    @unique
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  courses       Course[]
  assessments   Assessment[]
}

// ---------------- Course and Assessment models ----------------

model Course {
  courseId    String       @id @default(cuid())
  userId      String
  name        String       @db.VarChar(40)
  description String?      @db.VarChar(250)
  assessments Assessment[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@unique([userId, courseId])
}

enum AssessmentStatus {
  UPCOMING           @map("upcoming")
  SUBMITTED          @map("submitted")
  DUE_IN_24_HOURS    @map("due in 24 hours")
  OVERDUE            @map("overdue")
  GRADED             @map("graded")
}

model Assessment {
  assessmentId  String   @id @default(cuid())
  courseId      String
  userId        String
  title         String   @db.VarChar(40)
  description   String?  @db.VarChar(250)
  dueDate       DateTime
  status        AssessmentStatus // enum field
  score         Decimal? @db.Decimal(5, 2) // nullable if not graded
  targetScore   Decimal? @db.Decimal(5, 2) // optional what-if
  weight        Decimal  @db.Decimal(5, 2) // % of course grade
  latePenalty   Decimal? @db.Decimal(5, 2) // optional % deduction
  maxScore      Decimal  @db.Decimal(5, 2) @default(100)
  isSimulated   Boolean?
  submitted     Boolean
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  course        Course   @relation(fields: [courseId], references: [courseId], onDelete: Cascade)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, courseId])
  @@unique([userId, courseId, assessmentId])
}
